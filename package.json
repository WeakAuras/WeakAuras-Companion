{
  "name": "weakauras-companion",
  "version": "3.3.4",
  "description": "WeakAuras Companion App",
  "author": "Buds <mrbouyou@gmail.com>",
  "main": "src/background.js",
  "scripts": {
    "dev": "electron-esbuild dev",
    "build": "electron-esbuild build && cp src/index.html dist/main/index.html",
    "dist": "npm run build && electron-builder --publish onTagOrDraft",
    "lint": "eslint src/. --ext .js,.vue",
    "compile-tools": "cd node_modules/.bin/ && tsc -p ../../tools/",
    "i18n": "npm run compile-tools && node ./tools/scripts/extract-i18n-messages.js",
    "lint:scss": "npx stylelint \"src/**/*.vue\""
  },
  "dependencies": {
    "@types/jest": "^27.0.1",
    "archiver": "^5.3.0",
    "auto-launch": "^5.0.5",
    "axios": "^0.21.3",
    "electron-localshortcut": "^3.2.1",
    "electron-log": "^4.4.1",
    "electron-store": "^8.0.0",
    "electron-updater": "^4.3.9",
    "luaparse": "~0.2.1",
    "luxon": "^2.0.2",
    "regedit": "^5.0.0",
    "stylelint": "^13.13.1",
    "stylelint-config-standard": "^22.0.0",
    "stylelint-scss": "^3.20.1",
    "tail": "^2.2.3",
    "v-tooltip": "^2.1.3",
    "vue-cli-plugin-electron-builder": "^2.1.1",
    "vue-electron": "^1.0.6",
    "vue-i18n": "^8.25.0",
    "vue-toasted": "^1.1.28"
  },
  "devDependencies": {
    "@vue/compiler-sfc": "^3.2.9",
    "css-loader": "^5.2.7",
    "devtron": "^1.4.0",
    "electron": "^13.2.3",
    "electron-builder": "^22.11.7",
    "electron-debug": "^3.2.0",
    "electron-devtools-installer": "^3.2.0",
    "electron-esbuild": "^2.0.0",
    "electron-util": "^0.17.2",
    "esbuild": "^0.12.25",
    "esbuild-plugin-at-src-alias": "^0.2.0",
    "esbuild-vue": "^0.3.3",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-loader": "^4.0.2",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-vue": "next",
    "glob": "^7.1.7",
    "prettier": "^2.3.2",
    "sass": "^1.39.0",
    "typescript": "^4.4.2",
    "vue": "^2.6.14",
    "vue-loader": "^16.5.0",
    "vue-style-loader": "^4.1.3",
    "vue-template-compiler": "^2.6.14"
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "browserslist": [
    "Electron >= 12.0.0"
  ],
  "config": {
    "default-locale": "en",
    "supported-locales": [
      "en",
      "es",
      "de",
      "fr",
      "ru",
      "tr",
      "zh-cn"
    ]
  },
  "license": "GPL-2.0-or-later",
  "repository": {
    "type": "git",
    "url": "https://github.com/WeakAuras/WeakAuras-Companion.git"
  },
  "build": {
    "productName": "WeakAuras Companion",
    "appId": "wtf.weakauras.companion",
    "extraMetadata": {
      "name": "WeakAuras Companion",
      "main": "background.js"
    },
    "files": [
      {
        "from": ".",
        "filter": [
          "package.json"
        ]
      },
      {
        "from": "dist/main"
      }
    ],
    "dmg": {
      "contents": [
        {
          "x": 410,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 130,
          "y": 150,
          "type": "file"
        }
      ]
    },
    "mac": {
      "icon": "public/icon.icns",
      "category": "Utility",
      "extendInfo": {
        "LSUIElement": 1
      },
      "target": {
        "target": "dmg",
        "arch": [
          "x64",
          "arm64"
        ]
      },
      "artifactName": "${productName}-${version}-${os}-${arch}.${ext}"
    },
    "win": {
      "icon": "public/icon.ico",
      "extraResources": [
        "node_modules/regedit/vbs/*"
      ]
    },
    "nsis": {
      "deleteAppDataOnUninstall": true
    },
    "linux": {
      "target": [
        "AppImage",
        "snap",
        "deb",
        "rpm"
      ],
      "icon": "public/bigicon.png",
      "category": "Utility"
    }
  }
}
