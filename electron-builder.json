{
  "directories": {
    "output": "release/${version}"
  },
  "files": [
    "dist"
  ],
  "productName": "WeakAuras Companion",
  "appId": "wtf.weakauras.companion",
  "dmg": {
    "contents": [
      {
        "x": 410,
        "y": 150,
        "type": "link",
        "path": "/Applications"
      },
      {
        "x": 130,
        "y": 150,
        "type": "file"
      }
    ]
  },
  "mac": {
    "icon": "packages/renderer/public/icon.icns",
    "category": "Utility",
    "extendInfo": {
      "LSUIElement": 1
    },
    "target": {
      "target": "default",
      "arch": "universal"
    },
    "singleArchFiles": "**/sharp-darwin-arm64v8.node",
    "artifactName": "${productName}-${version}-${os}-${arch}.${ext}"
  },
  "win": {
    "icon": "packages/renderer/public/icon.ico",
    "publish": {
      "provider": "github"
    },
    "extraResources": [
      "node_modules/regedit/vbs/*"
    ]
  },
  "nsis": {
    "deleteAppDataOnUninstall": true
  },
  "linux": {
    "target": [
      "AppImage",
      "snap",
      "deb",
      "rpm"
    ],
    "icon": "packages/renderer/public/bigicon.png",
    "category": "Utility",
    "asarUnpack": [
      "**/node_modules/sharp/**"
    ]
  },
  "protocols": [
    {
      "name": "weakauras-companion",
      "role": "Viewer",
      "schemes": [
        "weakauras-companion"
      ]
    }
  ]
}